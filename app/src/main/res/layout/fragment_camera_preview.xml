<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muthaheer.livestream.fragments.CameraPreviewFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="4dp"
        android:gravity="center_vertical"
        android:id="@+id/layout_tokenID">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/ic_token_key"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tokenID"
            android:textSize="20sp"
            android:textColor="@color/jet"
            android:text="jsdvnujvbsd"/>
    </LinearLayout>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_tokenID" />

    <Button
        android:id="@+id/publishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@mipmap/ic_create_stream" />

    <Button
        android:id="@+id/cameraSwap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/publishButton"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/ic_switch_camera" />

</RelativeLayout>